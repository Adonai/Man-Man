<resources>
    <attr name="link_color" format="reference"/>
    <attr name="background_color" format="reference"/>
    <attr name="loading_icon_resource" format="reference"/>
    <attr name="fill_color" format="reference"/>
    <attr name="vertical_divider_resource" format="reference"/>
    <attr name="semi_transparent_divider_color" format="reference"/>
    <attr name="actionbar_theme" format="reference"/>

    <!-- Base application theme. -->
    <style name="Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="actionbar_theme">@style/DarkToolbar</item>

        <item name="link_color">@color/link_color_dark</item>
        <item name="background_color">@color/background_light</item>
        <item name="loading_icon_resource">@drawable/rotating_wait_dark</item>
        <item name="vertical_divider_resource">@drawable/vertical_divider_dark</item>
        <item name="fill_color">@android:color/white</item>
        <item name="semi_transparent_divider_color">@color/semi_transparent_dark</item>

        <item name="android:tint">@color/tint_color_black</item>
        <item name="android:textColorPrimary">@color/alt_text_color_dark</item>

        <item name="colorPrimary">@color/primary</item> <!-- used for the default action bar background -->
        <item name="colorPrimaryDark">@color/primary_dark</item> <!-- used for the status bar -->
        <item name="colorAccent">@color/accent</item> <!-- used to tint widgets -->
    </style>

    <style name="DarkToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@android:color/white</item>
        <item name="popupTheme">@style/Theme.MaterialComponents</item>
    </style>

    <style name="Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="actionbar_theme">@style/DarkToolbar</item>

        <item name="link_color">@color/link_color_light</item>
        <item name="background_color">@color/background_dark</item>
        <item name="loading_icon_resource">@drawable/rotating_wait_light</item>
        <item name="vertical_divider_resource">@drawable/vertical_divider_light</item>
        <item name="fill_color">@android:color/black</item>
        <item name="semi_transparent_divider_color">@color/semi_transparent_light</item>

        <item name="android:tint">@color/tint_color_white</item>
        <item name="android:textColorPrimary">@color/alt_text_color_light</item>

        <item name="colorPrimary">@color/primary</item> <!-- used for the default action bar background -->
        <item name="colorPrimaryDark">@color/primary_dark</item> <!-- used for the status bar -->
        <item name="colorAccent">@color/accent</item> <!-- used to tint widgets -->
    </style>

    <style name="Green" parent="Theme.MaterialComponents.NoActionBar">
        <item name="actionbar_theme">@style/GreenToolbar</item>

        <item name="link_color">@color/link_color_green</item>
        <item name="background_color">@color/background_green</item>
        <item name="loading_icon_resource">@drawable/rotating_wait_light</item>
        <item name="vertical_divider_resource">@drawable/vertical_divider_light</item>
        <item name="fill_color">@android:color/black</item>
        <item name="semi_transparent_divider_color">@color/semi_transparent_light</item>

        <item name="android:tint">@color/tint_color_green</item>
        <item name="android:textColorPrimary">@color/text_color_green</item>
        <item name="android:textColorSecondary">@color/alt_text_color_green</item>
        <item name="android:textColor">@color/text_color_green</item>
        <item name="android:textColorHint">@color/alt_text_color_green</item>

        <item name="colorPrimary">@color/primary</item> <!-- used for the default action bar background -->
        <item name="colorPrimaryDark">@color/primary_dark</item> <!-- used for the status bar -->
        <item name="colorAccent">@color/accent_green</item> <!-- used to tint widgets -->
    </style>

    <style name="GreenToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/text_color_green</item>
        <item name="android:tint">@color/tint_color_green</item>
        <item name="popupTheme">@style/Theme.MaterialComponents</item>
    </style>

</resources>
