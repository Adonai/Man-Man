<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:inAnimation="@android:anim/slide_in_left"
    android:outAnimation="@android:anim/slide_out_right"
    android:background="?attr/semi_transparent_divider_color"
    android:id="@+id/flipper">


    <com.adonai.manman.views.PassiveSlidingPane
        android:id="@+id/sliding_pane"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/background_color"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/link_list"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerPadding="10dp"
                android:showDividers="middle">

                </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <WebView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/man_content_web" />
            
            <LinearLayout
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:contentDescription="@string/close_search"
                    android:id="@+id/close_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"/>
                
                <EditText
                    android:id="@+id/search_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"/>
                
                <ImageView
                    android:id="@+id/find_next_occurence"
                    android:contentDescription="@string/find_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:scaleType="center"/>
                
                <ImageView
                    android:id="@+id/find_previous_occurence"
                    android:contentDescription="@string/find_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@android:drawable/arrow_up_float"
                    android:scaleType="center"/>
                
            </LinearLayout>
            
        </LinearLayout>
        
    </com.adonai.manman.views.PassiveSlidingPane>
</ViewFlipper>